<div class="d-flex align-items-center h-100">
    <div class="w-100">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 offset-sm-3">
                    <div class="border border-dark rounded-lg p-3">
                        <h1 class="display-4">Update User</h1>
                        <h6>{{status}}</h6>
                        <form class="justify-content-center" action="updateUser" method="post">
                            <input id="Id" name="Id" type="hidden" value={{row.Id}}>
                            <div class="form-group">
                                <label for="firstName">First Name: </label>
                                <input class="form-control" type="text" name="firstName" id="firstName" value="{{row.FirstName}}" required>
                            </div>
                            <div class="form-group">
                                <label for="lastName">Last Name: </label>
                                <input class="form-control" type="text" name="lastName" id="lastName" value="{{row.LastName}}" required>
                            </div>
                            <div class="form-group">
                                <label for="email">Email: </label>
                                <input class="form-control" type="email" name="email" id="email" value="{{row.Email}}" required>
                            </div>
                            <div class="form-group">
                                <label for="password">Password: </label>
                                <input class="form-control" type="password" name="password" id="password" required minlength="8" maxlength="20">
                            </div>
                            <div class="d-flex justify-content-center">
                                <button type="submit" class="btn btn-primary">Update User</button>
                            </div>
                        </form>
                        <p>
                            User Type: {{#if row.IsAdmin}} Administrator {{/if}} {{#unless row.IsAdmin}} Standard User{{/unless}} 
                        </p>

                        {{#unless row.IsAdmin}} 
                        <form class="justify-content-center" action="updateSignature" method="post">
                            <label for="id">User Signature: </label>
                            <img src="/images/{{row.Signature}}">
                            <input id="id" name="id" type="hidden" value={{row.Id}}>
                            <div class="d-flex justify-content-center">
                                <button type="submit" class="btn btn-primary">Upload New Signature File</button>
                            </div>
                        </form>
                        {{/unless}}

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

